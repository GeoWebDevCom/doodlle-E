<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site">
	<name>SobiPro Search</name>
	<author>UsByDesign</author>
	<creationDate>17 Nov 2013</creationDate>
	<copyright>Copyright (C) 2009 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>1.0.0</version>
	<description>Search Menu</description>
	<files>
		<filename>mod_sobiProSearch_RC.xml</filename>
		<filename module="mod_sobiProSearch">mod_sobiProSearch_RC.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<params>
		<param name="header_text" type="textarea" rows="3" cols="40" default="" label="Header Text" description="PARAMHEADERTEXT" />
		<param name="footer_text" type="textarea" rows="3" cols="40" default="" label="Footer Text" description="PARAMFOOTERTEXT" />
		<param name="search_box" type="radio" default="0" label="Show search box" description="SEARCHBOX">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="text_button" type="text" default="Search" label="Text button" description="Display text in button" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</extension>

